{
  "name": "vscode-zipexplorer",
  "displayName": "Zip File Explorer",
  "description": "Display the content of a Zip file in a Tree Explorer",
  "version": "0.1.0",
  "publisher": "slevesque",
  "license": "LICENSE.md",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "keywords": [
    "vscode",
    "zip",
    "explorer",
    "viewer"
  ],
  "bugs": {
    "url": "https://github.com/stef-levesque/vscode-zipexplorer/issues"
  },
  "homepage": "https://github.com/stef-levesque/vscode-zipexplorer/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/stef-levesque/vscode-zipexplorer.git"
  },
  "activationEvents": [
    "onView:zipExplorer",
    "onCommand:zipexplorer.exploreZipFile"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "zipexplorer.exploreZipFile",
        "title": "Explore Zip File"
      },
      {
        "command": "openZipResource",
        "title": "Open Zip Resource"
      }
    ],
    "languages": [
      {
        "id": "zip",
        "aliases": [
          "Zip",
          "ZIP"
        ],
        "extensions": [
          ".zip"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "zipexplorer.exploreZipFile",
          "when": "resourceLangId == zip",
          "group": "0_zip"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "zipExplorer",
          "name": "Zip Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/node": "^6.0.40",
    "typescript": "^2.3.4",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "lodash.groupby": "^4.6.0",
    "path.join": "^1.0.0"
  }
}
